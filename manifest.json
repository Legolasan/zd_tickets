{
    "name": "zendesk ticket creation",
    "version": "1.0",
    "description": "allow user to create zendesk ticket from extension",
    "manifest_version": 3,
    "author": "Arun Sunderraj",
    "action": {
        "default_popup": "index.html",
        "default_title": "Ticket Creator Form"
    },
    "content_scripts":[
        {
            "matches":["http://*/*"],
            "css":["styles.css"],
            "js":["background.js"]
        }
    ],
    "permissions":["activeTab"],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css;"    
    }
}